@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">分類清單</h1>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
                <i class="bi bi-plus-circle"></i> &nbsp; 新增
            </a>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>
                    名稱
                </th>
                <th>
                    順序
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="40%">
                        @item.Name
                    </td>
                    <td width="30%">
                        @item.DisplayOrder
                    </td>
                    <td>
                        <div class="w-80 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>修改</a>
                            <a class="btn btn-danger mx-2" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3"></i>刪除</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
